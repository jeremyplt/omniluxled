{{ 'hoox-promo-bar.css' | asset_url | stylesheet_tag }}

{% comment %} {% liquid
    assign promoText = section.settings.promo_text
%} {% endcomment %}

<div class="hoox-promo-bar">
    {% if promoText != 'blank' %}
    <p class="hoox-promo-bar__text">
        {{ promoText }}
    </p>
{% endif %}

</div>

{% comment %} Js file {% endcomment %}

{% comment %} {% schema %}
    {
        "name": "Hoox Promo Bar",
        "settings": [
            {
                "type": "text",
                "id": "promo_text",
                "label": "Promo Bar Text",
                "default": "SAVE 10% + GET FREE SHIPPING TODAY"
            }
        ]
    }
{% endschema %} {% endcomment %}