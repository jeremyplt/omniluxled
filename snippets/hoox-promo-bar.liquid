    {
        "name": "Hoox Promo Bar",
        "settings": [
            {
                "type": "text",
                "id": "promo_text",
                "label": "Promo Bar Text",
                "default": "SAVE 10% + GET FREE SHIPPING TODAY"
            }
        ]
    }
{% endschema %} {% endcomment %}