{{ 'hoox-promo-bar.css' | asset_url | stylesheet_tag }}

{% comment %} {% liquid
    assign promoText = section.settings.promo_text
%} {% endcomment %}

<section class="hoox-promo-bar">

{% if promoText != 'blank' %}
<p class="hoox-promo-bar__text">
    {{ promoText }}
</p>
{% endif %}

</section>

