<style>

  .inter-font {
    font-family: "Inter", sans-serif;
    font-optical-sizing: auto;
    font-weight: <weight>;
    font-style: normal;
    font-variation-settings:
      "slnt" 0;
  }
  .treatment-box{position: relative;padding: 0px;min-height: 1px;display: flex;}
  .treatment-box:before{content: '';padding-bottom: calc(100% / 2.23544);display: block;}
  .treatment-wrap {
    max-width: 1240px;
    padding: 47px 20px 47px;
    margin: 0 auto;
  }
  .treatment__wrapper {
    position: relative;
    max-width: 75%;
    margin-top: -20px;
  }
  .treatment__media {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
  }
  .treatment__header {position: relative;max-width: 628px;margin: 0 auto 66px;}
  .treatment__header h2 {font-size: 40px;line-height: normal;margin: 0;margin-bottom: 16px;text-align: center;font-family: "Inter", sans-serif;font-weight: 500;}
  .treatment__header p {
    text-align: center;
    margin: 0;
    font-family: "Inter", sans-serif;
    font-weight: 300;
    font-size: 14px;
  }
  .hoox-treatment__svg-desktop {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }
  .hoox-treatment__svg-mobile {
    display: block;
    position: absolute;
    left: 50%;
    transform: translate(-20px);
  }
  .hoox-treatment__bullets {
    max-width: 950px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }
  .hoox-treatment__bullet {
    position: absolute;
    border: 1px solid #000;
    border-radius: 100px;
    padding: 0;
    min-width: 260px;
    background-color: #FFFFFF4D;
  }
  .hoox-treatment__bullet-text {
    font-size: 20px;
    line-height: normal;
    text-align: center;
    padding: 7px 0;
    font-family: "Inter", sans-serif;
    font-weight: 300;
    color:#000;
  }
  .hoox-treatment__bullet.hoox-treatment__bullet-1 {
    top: 0%;
    left: 89%;
  }
  .hoox-treatment__bullet.hoox-treatment__bullet-2 {
    top: 35%;
    left: 94%;
    transform: translateX(-2px);
  }
  .hoox-treatment__bullet.hoox-treatment__bullet-3 {
    bottom: 0%;
    left: 89%;
    transform: translateX(-3px);
  }
  .hoox-treatment__bullet-text span {
    font-size: 36px;
    font-weight:400;
  }
  .treatment__media img {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
  .hoox-treatment__svg-desktop svg{
    height: 298px;
  }
  .mobile-img{display:none;}
  span.cost {
    font-size: 12px;
    font-weight: 300;
    line-height: normal;
    text-align: left;
    position: absolute;
    right: 30px;
    bottom: 25px;
    font-family: "Inter", sans-serif;
  }

  @media(min-width:769px){
    .hoox-treatment__svg-mobile{display:none;}
    .cost{display:none;}
    @media(max-width:1024px){
      body .treatment-box:before {padding-bottom: calc(80%);}
      .treatment__wrapper{margin-top: 11.72vw;}
    }
  }

  

  @media(min-width:1200px){
    .treatment__header h2{font-size: 1.55vw;margin-bottom: 0.926vw;}
    .treatment__header p {font-size: 0.810vw;}
    .treatment-wrap{padding: 2.72vw 20px;}
  }

  @media(max-width:1440px){
    .hoox-treatment__svg-desktop svg{
      height: 250px;
    }
    .hoox-treatment__bullet{
      min-width: 230px;
    }
    .hoox-treatment__bullet-text{
      font-size: 16px;
    }
    .hoox-treatment__bullet-text span{
      font-size: 26px;
    }
    .hoox-treatment__bullet.hoox-treatment__bullet-1{
      top: 1%;
      left: 88%;
      transform: translateX(-2px);
    }
    .hoox-treatment__bullet.hoox-treatment__bullet-2{
      left: 92%;
      transform: translateX(-4px);
    }
    .hoox-treatment__bullet.hoox-treatment__bullet-3{
      left: 88%;
      transform: translateX(-5px);
    }
  }
  
  @media(max-width:1199px){
    .treatment__header h2{font-size: 32px;}
    .hoox-treatment__bullet.hoox-treatment__bullet-1{top: -1%;left: 87%;transform: translateX(-4px);}
    .hoox-treatment__bullet.hoox-treatment__bullet-2{left: 91%;transform: translateX(-9px);top: 34%;}
    .hoox-treatment__bullet.hoox-treatment__bullet-3{left: 87%;transform: translateX(-7px);bottom: -1%;}
    .hoox-treatment__bullet{min-width: 200px;}
    .hoox-treatment__bullet-text{font-size: 14px;}
    .hoox-treatment__bullet-text span{font-size: 22px;}
    .hoox-treatment__svg-desktop svg{height: 200px;}
    @media(min-width:769px){
      .treatment-box:before{padding-bottom: calc(100% / 1.7);}
    }
  }

  @media(max-width:768px){
    .treatment__wrapper{max-width: 60%;}
  }

  @media(max-width:768px){
    .treatment-box:before{padding-bottom: calc(100% / 2.23544);}
    .hoox-treatment__svg-desktop{display:none;}
    .desktop-img{display:none;}
    .mobile-img{display:block;}
    .treatment__header h2{font-size: 22px;}
    .hoox-treatment__svg-mobile{left: 50%;transform: translate(15%, 30%);position: relative;display: flex;align-items: center;}
    .hoox-treatment__bullet-text{font-size: 12px;padding: 8px 10px;}
    .hoox-treatment__bullet-text span{font-size: 16px;}
    .hoox-treatment__bullet{min-width: 150px;background-color: transparent;}
    .treatment-box{min-height: 484px;}
    .treatment__header{margin: 0 auto;}
    .treatment-wrap{padding: 47px 16px 47px;}
    .treatment__wrapper{margin-top: 10px;}
    .hoox-treatment__bullet.hoox-treatment__bullet-2{transform: translateX(10px);}
    .hoox-treatment__bullet.hoox-treatment__bullet-3{transform: translateX(-5px);bottom: 3%;}
    .treatment__header p{font-size: 16px;line-height: normal;}
    .hoox-treatment__bullet.hoox-treatment__bullet-1{left: 77%;top: 29%;transform: translateX(-3px);}
    .hoox-treatment__bullet.hoox-treatment__bullet-2{transform: translateX(-3px);top: 64%;left: 83%;}
    .hoox-treatment__bullet.hoox-treatment__bullet-3{transform: translateX(-22px);bottom: -28%;left: 82%;}
  }

  @media(max-width:640px){
    .hoox-treatment__svg-mobile svg {height: 250px;}
    .hoox-treatment__svg-mobile{transform: translate(50px);}
    .hoox-treatment__svg-mobile svg{height: 250px;}
    .hoox-treatment__bullet.hoox-treatment__bullet-1{left: 77%;top: 13%;transform: translateX(-5px);}
    .hoox-treatment__bullet.hoox-treatment__bullet-2{transform: translateX(-4px);top: 39%;left: 83%;}
    .hoox-treatment__bullet.hoox-treatment__bullet-3{transform: translateX(-23px);bottom: 15%;}
  }
  
  @media(max-width:575px){
    .hoox-treatment__svg-mobile{transform: translate(45px);}
    .hoox-treatment__svg-mobile svg{height: 200px;}
    .hoox-treatment__bullet.hoox-treatment__bullet-1{left: 78%;top: 3%;transform: translate(-3px);}
    .hoox-treatment__bullet.hoox-treatment__bullet-2{transform: translateX(4px);top: 35%;}
    .hoox-treatment__bullet.hoox-treatment__bullet-3{transform: translateX(-16px);bottom: 7%;}
  }

  @media(max-width:480px){
    .hoox-treatment__svg-mobile{transform: translate(30px);}
    .hoox-treatment__bullet.hoox-treatment__bullet-1{left: 78%;}
    .hoox-treatment__bullet.hoox-treatment__bullet-2{transform: translateX(8px);}
    .hoox-treatment__bullet.hoox-treatment__bullet-3{transform: translateX(-13px);}
    .treatment__wrapper{margin-top: 20px;}
  }

  @media(max-width:375px){
    .hoox-treatment__svg-mobile{left: 50%;transform: translate(15px);position: relative;display: flex;align-items: center;}
    .hoox-treatment__bullet.hoox-treatment__bullet-1{left: 80%;}
    .hoox-treatment__bullet.hoox-treatment__bullet-2{transform: translateX(13px);}
    .hoox-treatment__bullet.hoox-treatment__bullet-3{transform: translateX(-8px);}
    .treatment__wrapper{margin-top: 10px;}
  }
</style>


