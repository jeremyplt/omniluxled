    {% if section.settings.bg-img-mobile != blank %}
    <img src="{{ section.settings.bg-img-mobile | image_url }}" class="mobile-img">
    {% else %}
    <img src="{{ section.settings.bg-img | image_url }}" class="mobile-img">
    {% endif %}
  </div>
  <div class="treatment__header">
