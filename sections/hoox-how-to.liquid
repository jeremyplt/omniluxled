{{ 'hoox-how-to.css' | asset_url | stylesheet_tag }}

{% liquid
  assign hooxHowToTitle = section.settings.hoox_how_to_title
  assign hooxHowToSubtitle = section.settings.hoox_how_to_subtitle
%}

<section class="hoox-to">
  <div class="l">
  {% if hooxHowToTitle != 'blank' %}
    <h2 class="hoox-how-to__title hoox-title text-align-center">
      {{ hooxHowToTitle }}
    </h2>
  {% endif %}

  {% if hooxHowToSubtitle != 'blank' %}
    <p class="hoox-how-to__subtitle hoox-text-primary text-align-center">
      {{ hooxHowToSubtitle }}
    </p>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="hoox-how-to__items swiper">
      <div class="hoox-how-to__items-wrapper swiper-wrapper">
      {% for block in section.blocks %}
        {% liquid
          assign hooxHowToImage = block.settings.hoox_how_to_image
          assign hooxHowToText = block.settings.hoox_how_to_text
        %}
 <div class="swiper-slide">
        <div class="hoox-how-to__item">
          {% if hooxHowToImage %}
            <figure class="hoox-how-to__image">
              {% render 'snippet-image', image: hooxHowToImage %}
            </figure>
          {% endif %}

          {% if hooxHowToText != blank %}
            <p class="hoox-how-to__text hoox-text-primary">
              <span class='hoox-how-to__index'>{{forloop.index}}.</span>
              {{ hooxHowToText }}
            </p>
          {% endif %}
        </div>
   </div>
      {% endfor %}
       
    </div>  <div class="hoox-reviews__arrows">
        <div class="slider-reviews-prev hoox-swiper-arrow hoox-swiper-arrow-prev">
          {% render 'arrow-previous' %}
        </div>
        <div class="hoox-reviews__dots"></div>
        <div class="slider-reviews-next hoox-swiper-arrow hoox-swiper-arrow-next">
          {% render 'arrow-next' %}
        </div>
      </div></div>
  {% endif %}
    
    {%- if section.settings.watch_video != "" -%}
      <div class="hoox-shop__video-holder videoholder">
        <div class="hoox-hero__btn-wrapper">
          <button class="hoox-shop__video-trigger js-video-modal-trigger watchbtn">
              
              <span class='hoox-btn hoox-shop__video-trigger-text'>WATCH VIDEO</span>
                 
            </button>
        </div>
        
            
            <aside class="hoox-shop__video-modal">
              <div class="hoox-shop__video-wrapper js-video-modal-outside"></div>
              <div class="hoox-shop__video-body">
                <div class="hoox-shop__video-iframe">
                 
                  <iframe
                    src="{{ section.settings.watch_video }}"
                    width="100%"
                    height="100%"
                    frameborder="0"
                    allow="autoplay; fullscreen; picture-in-picture"
                    data-original-link="{{ section.settings.watch_video }}"
                    allowfullscreen></iframe>
             
                </div>

                <button class="hoox-shop__video-close js-video-modal-trigger js-video-modal-close">
                  {% render 'hoox-icon-close' %}
                </button>
             
              </div>
              
            </aside>
          </div>
      
     
      {%- endif -%}
</div>
</section>
<script src="{{ 'glowup-slider.js' | asset_url }}" defer="defer"></script>
{% comment %} Js file {% endcomment %}

{% schema %}
{
  "name": "Hoox How To",
  "settings": [
    {
      "type": "text",
      "id": "hoox_how_to_title",
      "label": "Section Title"
    },
    {
      "type": "text",
      "id": "hoox_how_to_subtitle",
      "label": "Section Subtitle"
    },
    {
      "type": "text",
      "id": "watch_video",
      "label": "Watch Video Link"
    }
  ],
  "blocks": [
    {
      "type": "usp",
      "name": "How To Props",
      "settings": [
        {
          "type": "image_picker",
          "id": "hoox_how_to_image",
          "label": "Props Image"
        },
        {
          "type": "text",
          "id": "hoox_how_to_text",
          "label": "Props Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hoox How To"
    }
  ]
}
{% endschema %}
